#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL);
	int i,j,k;
	for(i=1;i<=5-1;i++){
		for(j=1;j<=i;j++){
			printf("  ");
			printf("%d",j);


		}
		printf("\n");
	}
	return EXIT_SUCCESS;
}
